@model List<RecentPostViewModel>

@if (Model?.Count > 0)
{
    foreach (var item in Model)
    {
        <li class="related-item">
            <h3><a href="@item.Link" title="@item.Title">@item.Title</a></h3>
            <p>@Utility.GetPostAbstract(item.Content, 60, true)</p>
            <div class="clear"></div><span>@Utility.FormatDate(item.PublicDate.Value)</span>
        </li>
    }
}
else
{
    <li class="related-item">
        <h3>No Data</h3>
    </li>
}