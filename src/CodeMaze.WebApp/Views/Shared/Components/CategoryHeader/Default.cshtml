@model List<CategoryItemViewModel>

@if (Model?.Count > 0)
{
    <li>
        <a href="javascript:void(0);">Categories</a>
        <ul>
            @{
                var categories = Model.Where(p => !p.ShowOnTab).OrderBy(p => p.Position).ToList();
                if (categories?.Count > 0)
                {
                    foreach (var item in categories)
                    {
                        <li><a href="@item.Link" title="@item.DisplayName">@item.DisplayName</a></li>
                    }
                }
            }
        </ul>
    </li>

    var categoryShowOnTabs = Model.Where(p => p.ShowOnTab).OrderBy(p => p.Position).ToList();
    if (categoryShowOnTabs?.Count > 0)
    {
        foreach (var item in categoryShowOnTabs)
        {
            <li><a href="@item.Link" title="@item.DisplayName">@item.DisplayName</a></li>
        }
    }
}