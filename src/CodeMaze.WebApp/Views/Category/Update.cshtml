@model CategoryEditViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    bool isUpdate = ((bool?)ViewData["update"]) ?? false;
    ViewData["Title"] = !isUpdate ? "Create category" : "Update category " + Model.DisplayName;
}

@section StyleLibs{
    <link href="@Utility.GetBaseUrl("/admin/css/page.manage.min.css")" rel="stylesheet" type="text/css" />
}

@section JsLibs{
    <script src="@Utility.GetBaseUrl("/admin/scripts/page.manage.min.js")" type="text/javascript"></script>
}
<!-- BEGIN PAGE HEADER-->
<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-controller="dashboard" asp-action="">Dashboard</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a asp-controller="category" asp-action="manage">Manage Category</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@(isUpdate ? "Update" : "Create") Category</span>
        </li>
    </ul>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<div class="page-title">
    <h3>Category Infomation</h3>
</div>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
<div class="row">
    <div class="col-md-9">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet light portlet-fit portlet-form bordered">

            <div class="portlet-body">
                <!-- BEGIN FORM-->

                @using (Html.BeginForm(FormMethod.Post, new { @class = "form-horizontal" }))
                {
                @Html.AntiForgeryToken()
                @Html.Hidden("Id", Model.Id);

                <div class="form-body">
                    <div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button> You have some form errors. Please check below.
                    </div>
                    <div class="alert alert-success display-hide">
                        <button class="close" data-close="alert"></button> Your form validation is successful!
                    </div>
                    <div class="form-group  margin-top-20">
                        <label class="control-label col-md-3">
                            Name
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                <input type="text" class="form-control" asp-for="@Model.DisplayName" placeholder="Display name for category" required />
                            </div>
                        </div>
                    </div>
                    @if (isUpdate)
                        {
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Url
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                <input readonly type="text" class="form-control" asp-for="@Model.Url" placeholder="Url for category" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Code
                            <span class="required"> * </span>
                        </label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                <input readonly type="text" class="form-control" asp-for="@Model.Code" placeholder="Code for category" />
                            </div>
                            <span class="help-block"> e.g: KZ6FB07E7C7A </span>
                        </div>
                    </div>
                        }
                    <div class="form-group">

                        <label class="control-label col-md-3" for="ShowOnTab" style="padding-top: 3px;">
                            Show on tab
                        </label>
                        <div class="col-md-8">
                            <div class="input-icon right" style="padding-top: 3px;">
                                <label class="mt-checkbox mt-checkbox-outline">
                                    <input type="checkbox" asp-for="@Model.ShowOnTab" />
                                    <span></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Note
                        </label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                <textarea class="form-control" asp-for="@Model.Note" placeholder="Note for category"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Position
                        </label>
                        <div class="col-md-8">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                <input type="number" min="0" step="1" max="999" class="form-control" asp-for="@Model.Position" placeholder="Position for category" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Submit</button>
                            <a href="/category/manage" class="btn default">Back</a>
                        </div>
                    </div>
                </div>
                }
                <!-- END FORM-->
            </div>
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>