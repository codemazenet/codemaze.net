<script>


    function onDeleteCategory(id){
        var rs = confirm("Đồng ý xóa danh mục");
        if(rs){
            $.post('/Admin/Category/Delete', {Id: id}, function(re){
                if(re.data == 200){
                    window.location.reload();
                }
            })
        }
    }

</script>